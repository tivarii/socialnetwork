{
  "name": "linkedin-community-backend",
  "version": "1.0.0",
  "description": "Backend for Mini LinkedIn-like Community Platform",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "npm run db:setup && nodemon server.js",
    "build": "npm install",
    "postinstall": "prisma generate",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:reset": "prisma migrate reset --force",
    "db:studio": "prisma studio",
    "db:setup": "npm run db:generate && npm run db:migrate",
    "vercel-build": "prisma generate && prisma migrate deploy",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": ["linkedin", "community", "social", "platform"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express-validator": "^7.0.1",
    "@prisma/client": "^5.7.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "prisma": "^5.7.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
